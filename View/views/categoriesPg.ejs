<!DOCTYPE html>
<html lang="en">
<head>
      <meta charset="UTF-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">

      <script src="./jQuery.js"></script>
      <link rel="stylesheet" href="animate.min.css">
      <link rel="shortcut icon" href="#" type="image/x-icon">
      <link rel="stylesheet" href="bootstrap/css/bootstrap.min.css">
      <link rel="stylesheet" href="forAllPages.css">
      <title>Categories</title>
</head>


<%- include('./categoriesArr.ejs') %>


<body class="animate__animated animate__fadeIn">
      <%- include('navbar'); %>

      
      <div class="container">
            <h1 class="text-center m-5 mb-5 px-5"><u>Categories</u></h1>

            <div class="row">
                  <% for(let i=0; i<=categoriesArr.length-1; i++) { %>
                        <div class="card mx-2 my-2 shadow" style="width: 13rem; height: 6rem; border: 2px solid black;" onclick="clickCategories('<%= categoriesArr[i].id_categories %>');">
                              <div class="d-flex justify-content-center align-items-center card-body">
                                    <div class="text-center"><h3><%= categoriesArr[i].name %></h3></div>
                              </div>
                        </div>
                  <% } %>
            </div>

            <% if(currUser.userType==='admin') { %>
                  <br>
                  <button class="btn btn-warning" onclick="location.href='/adminPg';">AdminPg</button>
            <% } %>

            <% if(currUser.userType==='supplier') { %>
                  <br>
                  <button class="btn btn-warning mr-3" onclick="location.href='/supplierPg';">SupplierPg</button>
                  <button class="btn btn-primary mr-3" onclick="location.href='/supplierProductRequests';">See Product Requests from customers</button>
                  <button class="btn btn-secondary" onclick="location.href='/promotionRequest';">Request Admin to promote products</button>
            <% } %>

            <% if(currUser.userType==='reader') { %>
                  <br>
                  <button class="btn btn-warning" onclick="location.href='/requestProductPg';">Request for a product</button>
            <% } %>

            <br><br><hr><br>

            <h4 class="mb-5">You can also try</h4>

            <div class="row mb-3">
                  <% for(let i=0; i<=products.length-1; i++) { %>
                        <div>
                              <div class="Border card mx-5 my-2 shadow" style="width: 8rem; height: auto;" onclick="location.href='/product?id_products=<%= products[i].id_products %>';">
                                    <img class="card-img-top" src=<%= products[i].imgSrc %> alt="Product image here">

                                    <div class="card-body myBorder rounded">
                                          <div class=""><b><%= products[i].name %></b></div>
                                          <div class="">Tk <%= products[i].price %></div>
                                    </div>
                              </div>
                        </div>
                  <% } %>
            </div>

      </div>
</body>
</html>


<script>
      function clickCategories(id_categories)
      {
            location.href=`/productsList?id_categories=${id_categories}`;
      };
</script>
